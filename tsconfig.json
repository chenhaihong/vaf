{
  "compilerOptions": {
    "composite": true,
    "target": "ES5",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/*": ["vaf/src/*"],
      "@erye/vaf": ["vaf"],
      "@erye/vaf/*": ["vaf/*"]
    },
    "types": ["node"],
    "resolveJsonModule": true,
    "allowJs": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "strict": true
  },
  "include": [
    "typings/components.d.ts",
    "typings/env.d.ts",
    // @erye/vaf
    "vaf/**/*",
    // play
    "play/index.ts",
    "play/env.d.ts",
    "play/**/*"
  ],
  "exclude": ["node_modules", "**/dist", "**/*.md"]
}
